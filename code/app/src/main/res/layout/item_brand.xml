<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_end_item_product"
    app:cardElevation="@dimen/card_elevation"
    app:cardCornerRadius="@dimen/card_corner_radius">

<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
android:padding="@dimen/home_fragment_padding">

<ImageView
    android:id="@+id/brandLogo"
    android:layout_width="@dimen/brand_logo_size_width"
    android:layout_height="@dimen/brand_logo_size"
    android:adjustViewBounds="true"
    android:scaleType="fitCenter" />

</LinearLayout>
    </androidx.cardview.widget.CardView>